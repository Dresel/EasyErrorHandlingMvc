<h2>Error trigger links</h2>
<script type="text/javascript">
	$(function () {
		$('a.ajax-error-link').bind('click', function (event) {
			var $this = $(this);
			var url = $this.attr('href');

			$.getJSON(url, function (data) {
				alert('Failed to get an error response.');
			})
				.error(function (xhr, textStatus, errorThrown) {
					alert('Error thrown: ' + errorThrown);
					alert('Response text: ' + xhr.responseText);
				});

			event.preventDefault();
		});
	});

	// Intercept POST error link clicks.
	$(function () {
		$('a.post-link').bind('click', function (event) {
			var $this = $(this);
			var url = $this.attr('href');
			var $form = $('#post-link-form');
			$form.attr('action', url);
			$form.submit();
			event.preventDefault();
		});
	});
</script>
