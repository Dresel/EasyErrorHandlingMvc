@using NLog
@using NLog.Targets
<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8"/>
		<meta lang="en"/>
		<title>EasyErrorHandling Sample</title>
		<script src="@Url.Content("~/Scripts/jquery-2.1.3.js")"></script>
		<link rel="stylesheet" href="@Url.Content("~/Content/style.css")"/>
	</head>
	<body>
		<header>
			<h1>EasyErrorHandling Sample</h1>
		</header>
		<div>
			<div>@RenderBody()</div>
			<p>Logged Messages</p>
			@{
				MemoryTarget memoryTarget = (MemoryTarget)LogManager.Configuration.FindTargetByName("memory");

				foreach (string log in memoryTarget.Logs)
				{
					<div>@log</div>
				}

			}
		</div>
	</body>

</html>